# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development
FLASK_DEBUG=1

# Database
DATABASE_URL=sqlite:///app.db
# For PostgreSQL: postgresql://user:password@localhost:5432/crystal_game

# PostgreSQL (if using docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=crystal_game

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# Admin
ADMIN_TOKEN=your-admin-token-here-change-in-production

# Game Settings
MAX_PLAYS_PER_HOUR=10
DEFAULT_CRYSTAL_COST=6

# TON Payout (Optional)
TON_WALLET_PRIVATE_KEY=your-ton-wallet-private-key-here
TON_NETWORK=testnet

